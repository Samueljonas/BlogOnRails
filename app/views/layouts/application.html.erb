<!DOCTYPE html>
<html>

<head>
    <title>Blog Maino</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Blog Maino</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'nav-link' %>
                    </li>
                    <% else %>
                    <li class="nav-item">
                        <%= link_to "Login", new_user_session_path, class: "btn me-2" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Register", new_user_registration_path, class: "btn btn-primary" %>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <%= yield %>
    </div>
</body>

</html>